<turbo-frame id="new-todo">
  <%= form_with model: @todo, url: todos_path, data: { turbo_frame: "todos" } do |form| %>
    <div class="my-3">
      <label class="form-control">
        <%= form.text_field :title, class: "input input-bordered input-primary w-full", placeholder: @fun_suggestion[:title_placeholder] %>
        <div class="label">
          <span class="label-text-alt">Title</span>
        </div>
      </label>
    </div>
    <div class="my-3">
      <label class="form-control">
        <%= form.text_area :description, class: "textarea textarea-bordered textarea-primary w-full", placeholder: @fun_suggestion[:description_placeholder] %>
        <div class="label">
          <span class="label-text-alt">Description</span>
        </div>
      </label>
    </div>
    <div class="my-3">
      <%= form.submit "Create todo", class: "btn btn-primary" %>
      <%= link_to "Cancel", todos_path, class: "ml-2 btn btn-secondary" %>
    </div>
  <% end %>
</turbo-frame>